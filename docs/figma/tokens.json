{
  "$schema": "https://www.figma.com/plugin-docs/api/figma.variables/",
  "collections": [
    {
      "name": "Canvas System",
      "modes": ["light", "dark"],
      "variables": [
        {
          "name": "color.bg",
          "values": { "light": "#F7F8FA", "dark": "#0B0C0F" }
        },
        {
          "name": "color.surface",
          "values": { "light": "#FFFFFF", "dark": "#111318" }
        },
        {
          "name": "color.border",
          "values": { "light": "#E5E7EB", "dark": "#2A2E37" }
        },
        {
          "name": "color.primary",
          "values": { "light": "#6E6BFF", "dark": "#6E6BFF" }
        },
        {
          "name": "color.running",
          "values": { "light": "#7AA2F7", "dark": "#7AA2F7" }
        },
        {
          "name": "color.success",
          "values": { "light": "#22C55E", "dark": "#22C55E" }
        },
        {
          "name": "color.error",
          "values": { "light": "#F43F5E", "dark": "#F43F5E" }
        },

        { "name": "radius.xs", "values": { "light": 6, "dark": 6 } },
        { "name": "radius.sm", "values": { "light": 8, "dark": 8 } },
        { "name": "radius.md", "values": { "light": 12, "dark": 12 } },
        { "name": "radius.lg", "values": { "light": 16, "dark": 16 } },

        { "name": "spacing.4", "values": { "light": 4, "dark": 4 } },
        { "name": "spacing.8", "values": { "light": 8, "dark": 8 } },
        { "name": "spacing.12", "values": { "light": 12, "dark": 12 } },
        { "name": "spacing.16", "values": { "light": 16, "dark": 16 } },
        { "name": "spacing.24", "values": { "light": 24, "dark": 24 } },
        { "name": "spacing.32", "values": { "light": 32, "dark": 32 } },

        {
          "name": "shadow.e1",
          "values": {
            "light": "0px 1px 2px rgba(0,0,0,0.05)",
            "dark": "0px 1px 2px rgba(0,0,0,0.35)"
          }
        },
        {
          "name": "shadow.e2",
          "values": {
            "light": "0px 4px 12px rgba(0,0,0,0.08)",
            "dark": "0px 6px 18px rgba(0,0,0,0.35)"
          }
        },

        {
          "name": "typo.label",
          "values": {
            "light": {
              "fontFamily": "Inter",
              "fontSize": 12,
              "fontWeight": 600
            },
            "dark": { "fontFamily": "Inter", "fontSize": 12, "fontWeight": 600 }
          }
        },
        {
          "name": "typo.body",
          "values": {
            "light": {
              "fontFamily": "Inter",
              "fontSize": 14,
              "fontWeight": 400
            },
            "dark": { "fontFamily": "Inter", "fontSize": 14, "fontWeight": 400 }
          }
        },
        {
          "name": "typo.mono",
          "values": {
            "light": {
              "fontFamily": "JetBrains Mono",
              "fontSize": 12,
              "fontWeight": 400
            },
            "dark": {
              "fontFamily": "JetBrains Mono",
              "fontSize": 12,
              "fontWeight": 400
            }
          }
        }
      ]
    }
  ]
}
